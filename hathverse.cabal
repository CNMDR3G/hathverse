name:          hathverse
version:       0.0.1
cabal-version: >= 1.8
build-type:    Simple

executable          hathverse
    hs-source-dirs: src
    main-is:        Main.hs
    ghc-options:    -Wall -threaded -O2 -rtsopts -with-rtsopts=-N
    extensions:     OverloadedStrings
    build-depends:  base
                  , text
                  , bytestring
                  , transformers
                  , scotty
                  , blaze-html
                  -- , postgresql-simple